<div class="container-card d-flex position-relative text-center">
  <div class="speech-card">
    <div class="speech-card-contents">
      <%= cl_image_tag speech.user.photo.key, class: "avatar-large" %>
      <p class=><%= speech.user.first_name %> <%= speech.user.last_name %></p>
      <%= link_to speech.title.present? ? speech.title : "Response to #{speech.training.speeches[0].title}", speech_path(speech.id), class:"text-decoration-none", style: "font-weight: bold; font-size: 20px;" %>
      <p><%= speech.seconds %> seconds &mdash; <%= speech.total_price %>å††</p>
      <%# <p>Total price: </p> %>
      <h3><span class="status-pill <%= speech.status_color %> ">
          <%= speech.current_status %></span></h3>
      <img src="https://www.nicepng.com/png/full/131-1314805_radio-spot-icon-mike-icons.png" class="avatar-large">
    </div>
  </div>
</div>
